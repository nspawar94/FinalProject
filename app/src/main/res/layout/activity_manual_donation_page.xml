<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManualDonationPage">

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editDate"
        android:layout_alignEnd="@+id/textDate"
        android:layout_marginEnd="-170dp"
        android:layout_marginBottom="-263dp"
        android:text="Submit"
        android:textStyle="bold"
        tools:background="@android:color/holo_green_dark"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="386dp"
        tools:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textLocation"
        android:layout_width="103dp"
        android:layout_height="33dp"
        android:layout_alignStart="@+id/textDate"
        android:layout_alignBottom="@+id/editLocationEnter"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="6dp"
        android:text="Location"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="270dp"
        tools:text="Location" />

    <TextView
        android:id="@+id/textNewDonation"
        android:layout_width="315dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="26dp"
        android:text="(+) New Donation"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="16dp"
        tools:text="(+) New Donation" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="103dp"
        android:layout_height="33dp"
        android:layout_alignBottom="@+id/buttonClear"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="260dp"
        android:layout_marginRight="260dp"
        android:layout_marginBottom="219dp"
        android:text="Date"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="178dp"
        tools:text="Date" />

    <EditText
        android:id="@+id/editDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="345dp"
        android:ems="10"
        android:inputType="date"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="165dp" />

    <EditText
        android:id="@+id/editLocationEnter"
        android:layout_width="213dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="260dp"
        android:ems="10"
        android:inputType="text"
        android:text="Donation center name"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="260dp" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="222dp"
        android:layout_marginRight="222dp"
        android:layout_marginBottom="124dp"
        android:text="Clear"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="386dp" />

</RelativeLayout>