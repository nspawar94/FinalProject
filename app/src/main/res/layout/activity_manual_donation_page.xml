<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManualDonationPage">

    <Spinner
        android:id="@+id/spinnerLocation"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewShowDate"
        android:layout_alignParentTop="true"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="5dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_alignRight="@+id/textViewShowDate"
        android:layout_marginRight="5dp" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textDate"
        android:layout_alignRight="@+id/textDate"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-184dp"
        android:layout_marginRight="-184dp"
        android:layout_marginBottom="83dp"
        android:text="Submit"
        android:textStyle="bold"
        tools:background="@android:color/holo_green_dark"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="386dp"
        tools:textColor="@android:color/background_light" />


    <TextView
        android:id="@+id/textNewDonation"
        android:layout_width="315dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="26dp"
        android:text="(+) New Donation"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="16dp"
        tools:text="(+) New Donation"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="28dp" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="103dp"
        android:layout_height="33dp"
        android:layout_alignBottom="@+id/buttonClear"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="258dp"
        android:layout_marginRight="258dp"
        android:layout_marginBottom="175dp"
        android:text="Date"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="178dp"
        tools:text="Date" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="224dp"
        android:layout_marginRight="224dp"
        android:layout_marginBottom="82dp"
        android:text="Clear"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="386dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="-99dp"
        android:layout_marginRight="-99dp"
        android:layout_toStartOf="@+id/buttonClear"
        android:layout_toLeftOf="@+id/buttonClear"
        android:text="Location"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonDatePicker"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textDate"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="115dp"
        android:layout_marginLeft="115dp"
        android:layout_marginRight="0dp"
        android:text="Pick a Date" />


    <TextView
        android:id="@+id/textViewShowDate"
        android:layout_width="358dp"
        android:layout_height="59dp"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="159dp"
        android:textSize="24sp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_marginLeft="4dp" />


</RelativeLayout>