<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManualDonationPage">

    <Spinner
        android:id="@+id/spinnerLocation"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextAge"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="149dp"
        android:layout_marginLeft="149dp"
        android:layout_marginTop="262dp"
        android:layout_marginBottom="0dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textDate"
        android:layout_alignRight="@+id/textDate"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-183dp"
        android:layout_marginRight="-183dp"
        android:layout_marginBottom="118dp"
        android:text="Submit"
        android:textStyle="bold"
        tools:background="@android:color/holo_green_dark"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="386dp"
        tools:textColor="@android:color/background_light" />


    <TextView
        android:id="@+id/textNewDonation"
        android:layout_width="315dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="26dp"
        android:text="(+) New Donation"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="16dp"
        tools:text="(+) New Donation"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="28dp" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="103dp"
        android:layout_height="33dp"
        android:layout_alignBottom="@+id/buttonClear"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="260dp"
        android:layout_marginRight="260dp"
        android:layout_marginBottom="219dp"
        android:text="Date"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="178dp"
        tools:text="Date" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="223dp"
        android:layout_marginRight="223dp"
        android:layout_marginBottom="112dp"
        android:text="Clear"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="386dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="269dp"
        android:layout_marginEnd="-110dp"
        android:layout_marginRight="-110dp"
        android:layout_toStartOf="@+id/buttonClear"
        android:layout_toLeftOf="@+id/buttonClear"
        android:text="Location"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonDatePicker"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonSubmit"
        android:layout_alignBottom="@+id/textDate"
        android:layout_marginEnd="-55dp"
        android:layout_marginBottom="0dp"
        android:text="Pick a date"
        android:layout_alignRight="@+id/buttonSubmit"
        android:layout_marginRight="-55dp" />

    <TextView
        android:id="@+id/textViewShowDate"
        android:layout_width="215dp"
        android:layout_height="52dp"
        android:layout_alignStart="@+id/spinnerLocation"
        android:layout_alignLeft="@+id/spinnerLocation"
        android:layout_alignParentTop="true"
        android:layout_marginTop="191dp"
        android:textSize="18sp" />

</RelativeLayout>